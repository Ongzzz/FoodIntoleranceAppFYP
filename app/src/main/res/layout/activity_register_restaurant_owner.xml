<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterRestaurantOwner">

    <TextView
        android:id="@+id/tv_welcomeNewRestaurantOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/welcomeNewRestaurantOwner"
        android:textColor="@color/teal_700"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_restaurantOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:hint="Name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/ic_person_dynamic"
        android:drawablePadding="8dp"
        android:background="@drawable/round_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcomeNewRestaurantOwner" />

    <EditText
        android:id="@+id/et_restaurantOwnerEmail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/email_hint"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/round_et"
        android:drawableStart="@drawable/ic_email_dynamic"
        android:drawablePadding="8dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_restaurantOwnerName" />

    <EditText
        android:id="@+id/et_restaurantOwnerPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/ic_password_dynamic"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:background="@drawable/round_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_restaurantOwnerEmail" />

    <ImageView
        android:id="@+id/img_showHide"
        style="?android:buttonBarButtonStyle"
        android:scaleType="centerCrop"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginBottom="3dp"
        android:paddingBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_show_hide"
        app:layout_constraintBottom_toBottomOf="@+id/et_restaurantOwnerPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_restaurantOwnerPassword" />

