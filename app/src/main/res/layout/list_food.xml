<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:elevation="10dp"
        app:cardMaxElevation="12dp">

        <TextView
            android:id="@+id/tv_pending_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurantName"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imgView_food_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodName"
            android:layout_gravity="left|bottom"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_food_description"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/foodDescription"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodPrice"
            android:layout_gravity="right"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imgView_decrease"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_minus"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_food_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="35dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imgView_increase"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:id="@+id/imgView_add_to_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="170dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tv_food_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="right|top"
            android:layout_marginRight="20dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:drawableEnd="@drawable/ic_checkout"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/unfocused"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="135dp" />

    <ImageView
        android:id="@+id/imgView_add_food"
        android:background="@drawable/background_black_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_add_white"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="310dp"/>

</RelativeLayout>

</ScrollView>


