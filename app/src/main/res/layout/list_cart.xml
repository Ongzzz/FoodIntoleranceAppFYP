    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/imgView_food_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:text="@string/foodName"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="120dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_food_price"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="@string/foodPriceTitle"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="190dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imgView_decrease_quantity"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_minus"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="279dp"/>

        <TextView
            android:id="@+id/tv_food_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="284dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imgView_increase_quantity"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="280dp"/>

        <ImageView
            android:id="@+id/imgView_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="330dp"/>

    </androidx.cardview.widget.CardView>

